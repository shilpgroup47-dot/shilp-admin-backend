# Environment Configuration Template
# Copy this file to .env.production for production deployment

# Environment
NODE_ENV=production
PORT=8081

# Database Configuration
# Replace with your production MongoDB Atlas connection
DATABASE_URL=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/?appName=your_app
DATABASE_NAME=shilpadmin

# JWT Configuration
# IMPORTANT: Generate a strong JWT secret for production
JWT_SECRET=your_super_secure_jwt_secret_here_use_crypto_random_64_bytes
JWT_EXPIRES_IN=7d

# CORS Configuration
# Add your production domains here
CORS_ORIGIN=https://admin.shilpgroup.com,https://shilpgroup.com

# Admin Configuration for First Setup
# REMOVE THESE AFTER FIRST ADMIN CREATION
ADMIN_EMAIL=your_admin_email@domain.com
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_USERNAME=your_admin_username
ADMIN_FULLNAME=Your Admin Full Name

# File Upload Configuration
UPLOAD_DIR=uploads

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100